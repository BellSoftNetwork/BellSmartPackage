<Window x:Class="Bell_Smart_Manager.Source.Frame.BSL.BSL_PackEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="팩 편집기" Height="281.51" Width="643.165" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="/Bell Smart Manager;component/Resource/Photo/Photo_RedBell.ico">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="243" VerticalAlignment="Top" Width="627">
            <TabItem Header="모드팩">
                <Grid Background="White">
                    <GroupBox Header="정보" HorizontalAlignment="Left" VerticalAlignment="Top" Height="49" Width="621">
                        <Grid HorizontalAlignment="Left" Height="27" Margin="0,0,-2,0" VerticalAlignment="Top" Width="621">
                            <Label Content="MUID :" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <ComboBox HorizontalAlignment="Left" Margin="53,4,0,0" VerticalAlignment="Top" Width="478"/>
                            <Button Content="불러오기" HorizontalAlignment="Left" Margin="536,4,0,0" VerticalAlignment="Top" Width="75" Height="22"/>
                        </Grid>
                    </GroupBox>
                    <TabControl HorizontalAlignment="Left" Height="160" Margin="0,54,0,0" VerticalAlignment="Top" Width="621">
                        <TabItem Header="일반">
                            <Grid Background="White">
                                <Label Content="이름 :" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                <TextBox x:Name="txtModName" HorizontalAlignment="Left" Height="23" Margin="70,3,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246"/>
                                <Label Content="최신버전 :" HorizontalAlignment="Left" Margin="0,26,0,0" VerticalAlignment="Top"/>
                                <TextBox x:Name="txtModLatest" HorizontalAlignment="Left" Height="23" Margin="70,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246"/>
                                <Label Content="권장버전 :" HorizontalAlignment="Left" Margin="0,52,0,0" VerticalAlignment="Top"/>
                                <ComboBox x:Name="cbModRecommended" HorizontalAlignment="Left" Margin="70,56,0,0" VerticalAlignment="Top" Width="246"/>
                                <Label Content="베이스팩 :" HorizontalAlignment="Left" Margin="0,78,0,0" VerticalAlignment="Top"/>
                                <TextBox x:Name="txtBUID" HorizontalAlignment="Left" Height="23" Margin="70,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246"/>
                                <Button x:Name="btnModSave" Content="기본정보 저장" HorizontalAlignment="Left" Margin="224,109,0,0" VerticalAlignment="Top" Width="92"/>
                                <ListBox HorizontalAlignment="Left" Height="78" Margin="321,0,0,0" VerticalAlignment="Top" Width="294"/>
                                <Label Content="베이스팩 필요버전 :" HorizontalAlignment="Left" Margin="321,81,0,0" VerticalAlignment="Top"/>
                                <ComboBox x:Name="cbBaseVer" HorizontalAlignment="Left" Margin="443,82,0,0" VerticalAlignment="Top" Width="172"/>
                                <CheckBox x:Name="cbModActivate" Content="선택버전 활성화" HorizontalAlignment="Left" Margin="321,112,0,0" VerticalAlignment="Top"/>
                                <Button Content="선택버전 삭제" HorizontalAlignment="Left" Margin="434,112,0,0" VerticalAlignment="Top" Width="84"/>
                                <Button Content="선택버전 저장" HorizontalAlignment="Left" Margin="523,112,0,0" VerticalAlignment="Top" Width="92"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="고급">
                            <Grid Background="White">
                                <ListView x:Name="lstModPermission" HorizontalAlignment="Left" Height="132" VerticalAlignment="Top" Width="282">
                                    <ListView.View>
                                        <GridView>
                                            <GridView.ColumnHeaderContextMenu>
                                                <ContextMenu/>
                                            </GridView.ColumnHeaderContextMenu>
                                            <GridViewColumn Header="이메일"/>
                                            <GridViewColumn Header="권한"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <Label Content="이메일 :" HorizontalAlignment="Left" Margin="287,0,0,0" VerticalAlignment="Top"/>
                                <TextBox x:Name="txtModEmail" HorizontalAlignment="Left" Height="23" Margin="345,2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
                                <Label Content="권한 :" HorizontalAlignment="Left" Margin="287,26,0,0" VerticalAlignment="Top"/>
                                <ComboBox x:Name="cbModPermission" HorizontalAlignment="Left" Margin="345,30,0,0" VerticalAlignment="Top" Width="180"/>
                                <Button x:Name="btnModAdd" Content="추가" HorizontalAlignment="Left" Margin="426,57,0,0" VerticalAlignment="Top" Width="47" Click="btnModAdd_Click"/>
                                <Button x:Name="btnModDel" Content="삭제" HorizontalAlignment="Left" Margin="478,57,0,0" VerticalAlignment="Top" Width="47"/>
                                <Button x:Name="btnModNews" Content="뉴스 편집" HorizontalAlignment="Left" Margin="540,2,0,0" VerticalAlignment="Top" Width="75"/>
                                <Button x:Name="btnModDetail" Content="상세정보" HorizontalAlignment="Left" Margin="540,30,0,0" VerticalAlignment="Top" Width="75"/>
                                <Button x:Name="btnModRefresh" Content="새로고침" HorizontalAlignment="Left" Margin="287,57,0,0" VerticalAlignment="Top" Width="75"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="베이스팩">
                <Grid Background="White"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
