<Window x:Class="Bell_Smart_Launcher.Source.Frame.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bell_Smart_Launcher.Source.Frame"
        mc:Ignorable="d"
        Title="설정" Height="400" Width="600" Icon="/Bell Smart Launcher;component/Resource/Photo/Photo_Bell.ico" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" FontSize="14.667">
    <Grid>
        <TabControl x:Name="tc_Setting">
            <TabItem x:Name="tiGeneral" Header="일반">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="설치 폴더 :" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox x:Name="gen_txtInstall" Height="23" Margin="97.244,12.96,90,0" TextWrapping="Wrap" Text="C:\BSN" VerticalAlignment="Top"/>
                    <Button x:Name="gen_btnSearch" Content="찾기" HorizontalAlignment="Right" Margin="0,13,10,0" VerticalAlignment="Top" Width="75"/>
                    <Label Content="언어 :" Margin="10,35.96,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ComboBox x:Name="gen_cbLanguage" Margin="97.244,39.96,268.259,0" VerticalAlignment="Top" SelectedIndex="0">
                        <ListBoxItem Content="한국어"/>
                    </ComboBox>
                    <CheckBox x:Name="gen_cbConsole" Content="콘솔 실행" HorizontalAlignment="Left" Margin="97.244,70.466,0,0" VerticalAlignment="Top" FontSize="14.667"/>
                    <CheckBox x:Name="gen_cbKeep" Content="런처 실행 유지" HorizontalAlignment="Left" Margin="97.244,93.972,0,0" VerticalAlignment="Top" FontSize="14.667" IsChecked="True"/>
                    <Button x:Name="gen_btnSave" Content="저장" HorizontalAlignment="Right" Margin="0,0,10,9.997" VerticalAlignment="Bottom" Width="75" Click="gen_btnSave_Click"/>
                    <CheckBox x:Name="gen_cbAutoControl" Content="런처 자동제어" HorizontalAlignment="Left" Margin="97.244,117.478,0,0" VerticalAlignment="Top" IsChecked="True"/>
                    <CheckBox x:Name="gen_cbDebugMode" Content="Debug mode" HorizontalAlignment="Left" Margin="97.244,140.984,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tiGame" Header="게임">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="White">
                    <Label Content="메모리 할당량 :" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.231,1.115" FontSize="14.667"/>
                    <Slider x:Name="game_sdJAVA" HorizontalAlignment="Left" VerticalAlignment="Top" Width="211" Maximum="16" Minimum="1" SmallChange="0.25" Value="1" IsSnapToTickEnabled="True" Margin="156.783,15.729,0,0" ValueChanged="game_sdJAVA_ValueChanged" TickFrequency="0.25"/>
                    <Label x:Name="game_lbRAM" Content="1 GB" Margin="0,10,111.679,0" VerticalAlignment="Top" Height="29.507" HorizontalAlignment="Right" Width="103.538"/>
                    <Label Content="자바 경로 :" HorizontalAlignment="Left" Margin="10,39.506,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="game_txtJAVAPath" Height="23" Margin="156.783,43.506,160.624,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="C:\BSN\Runtime\JAVA\x64"/>
                    <Label Content="매개변수 :" HorizontalAlignment="Left" Margin="10,69.012,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="game_txtParameter" Height="23" Margin="156.783,71.506,160.624,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <Button x:Name="game_btnSave" Content="저장" HorizontalAlignment="Right" Margin="0,0,10,9.999" VerticalAlignment="Bottom" Width="75" Click="game_btnSave_Click"/>
                    <CheckBox x:Name="game_cbMultipleExe" Content="게임 다중실행 허용" Margin="156.783,99.506,160.624,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tiDebug" Header="Debug">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="White">
                    <Button x:Name="deb_btnSave" Content="Save" HorizontalAlignment="Right" Margin="0,0,10,9.999" VerticalAlignment="Bottom" Width="75" Click="deb_btnSave_Click"/>
                    <CheckBox x:Name="deb_cbPWV" Content="비밀번호 툴팁 표시" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
