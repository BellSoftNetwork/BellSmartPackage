<Window x:Class="Bell_Smart_Launcher.Source.Frame.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bell Smart Launcher" Height="501" Width="858" WindowStartupLocation="CenterScreen" Icon="/Bell Smart Launcher;component/Resource/Photo/Photo_Bell.ico" ResizeMode="CanMinimize" Loaded="Window_Loaded" Closed="Window_Closed">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FF34CBC4"/>
            <GradientStop Color="#FF3E64CD" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid x:Name="gd_Main">
        <TabControl x:Name="tc_Main" HorizontalAlignment="Left" Height="470" VerticalAlignment="Top" Width="850" Background="{x:Null}" BorderBrush="{x:Null}">
            <TabItem Header="NEWS" Background="{x:Null}" Height="50" Margin="-2,-1,-2,1" Width="150" BorderBrush="{x:Null}">
                <Grid/>
            </TabItem>
            <TabItem Header="MODPACKS" Background="{x:Null}" Margin="0,-2,0,0" Width="150" Height="50" BorderBrush="{x:Null}">
                <Grid>
                    <ListBox x:Name="mod_lstPackList" HorizontalAlignment="Left" Height="320" VerticalAlignment="Top" Width="298" Background="{x:Null}" FontWeight="Bold" FontSize="20" Margin="546,27,-4,0" SelectionChanged="mod_lstPackList_SelectionChanged">
                        <ListBoxItem Content="테스트1"/>
                        <ListBoxItem Content="테스트2"/>
                    </ListBox>
                    <WebBrowser x:Name="mod_wbNotice" HorizontalAlignment="Left" Height="284" VerticalAlignment="Top" Width="541" Margin="0,27,0,0"/>
                    <ComboBox x:Name="mod_cbProfile" HorizontalAlignment="Left" Margin="587,352,0,0" VerticalAlignment="Top" Width="247" SelectedIndex="0" SelectionChanged="mod_cbProfile_SelectionChanged">
                        <ComboBoxItem Content="Select Profile"/>
                        <ComboBoxItem Content="Create Profile"/>
                    </ComboBox>
                    <Button x:Name="mod_btnEnjoy" Content="Enjoy" HorizontalAlignment="Left" Margin="755,379,0,0" VerticalAlignment="Top" Width="75" Click="mod_btnEnjoy_Click"/>
                    <Button x:Name="mod_btnEdit" Content="Edit" HorizontalAlignment="Left" Margin="546,352,0,0" VerticalAlignment="Top" Width="38" Height="22" Click="mod_btnEdit_Click"/>
                    <ComboBox x:Name="mod_cbVersion" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" SelectedIndex="0">
                        <ComboBoxItem Content="Recommended"/>
                        <ComboBoxItem Content="Latest"/>
                    </ComboBox>
                    <Expander x:Name="mod_expanderDetail" Header="Detail" HorizontalAlignment="Left" Margin="0,379,0,0" VerticalAlignment="Top" Collapsed="mod_expanderDetail_Collapsed" Expanded="mod_expanderDetail_Expanded">
                        <Grid Background="#FFE5E5E5"/>
                    </Expander>
                    <ListBox x:Name="mod_lstDetailList" HorizontalAlignment="Left" Height="58" Margin="0,316,0,0" VerticalAlignment="Top" Width="541"/>
                    <Button x:Name="mod_btnPackSetting" Content="Pack Setting" HorizontalAlignment="Left" Margin="749,0,0,0" VerticalAlignment="Top" Width="85" Height="22" Click="mod_btnPackSetting_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="RESOURCES" Background="{x:Null}" Margin="0,-1,0,1" Width="150" Height="50" BorderBrush="{x:Null}">
                <Grid/>
            </TabItem>
            <TabItem Header="SETTING" Background="{x:Null}" Margin="0,-1,0,1" Width="150" Height="50" BorderBrush="{x:Null}" Foreground="Black">
                <Grid Margin="0,0,0,-10">
                    <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="408" Margin="10,0,0,0" VerticalAlignment="Top" Width="820">
                        <TabItem Header="Start Options">
                            <Grid Background="#FFE5E5E5">
                                <CheckBox x:Name="checkBox" Content="Open with Console Window" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="JVM Settings">
                            <Grid Background="#FFE5E5E5">
                                <GroupBox x:Name="groupBox" Header="OneClick JVM Settings" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" Height="264" Width="790" BorderBrush="Black">
                                    <Grid HorizontalAlignment="Left" Height="244" Margin="10,10,-2,-12" VerticalAlignment="Top" Width="770">
                                        <CheckBox x:Name="checkBox2" Content="Minimum Ram Size" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                                        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="149,4,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.749,-0.891" Width="219"/>
                                        <CheckBox x:Name="checkBox2_Copy" Content="Maximum Ram Size" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top"/>
                                        <Slider x:Name="slider_Copy" HorizontalAlignment="Left" Margin="149,31,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.749,-0.891" Width="219"/>
                                    </Grid>
                                </GroupBox>
                                <CheckBox x:Name="checkBox1" Content="Using Manual JVM Argument" HorizontalAlignment="Left" Margin="10,295,0,0" VerticalAlignment="Top"/>
                                <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="137,316,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="663"/>
                                <Label x:Name="label" Content="Comfirm Argument :" HorizontalAlignment="Left" Margin="10,314,0,0" VerticalAlignment="Top"/>
                                <Label x:Name="label1" Content="Total System Memory :" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
                                <Label x:Name="label2" Content="Using System Memory :" HorizontalAlignment="Left" Margin="227,0,0,0" VerticalAlignment="Top"/>
                                <Button x:Name="button" Content="Reset" HorizontalAlignment="Left" Margin="645,344,0,0" VerticalAlignment="Top" Width="75"/>
                                <Button x:Name="button1" Content="Apply" HorizontalAlignment="Left" Margin="725,344,0,0" VerticalAlignment="Top" Width="75"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
